---
import Button from '../Button.astro'

type Props = {
	isLoading?: boolean
}

const { isLoading = false } = Astro.props
---

<div class="my-6">
	<Button
		type="submit"
		version="tonal"
		classes={`w-full shadow-sm text-xl !font-bold uppercase
            !bg-middle/100 !text-white !hover:bg-middle/100 !focus:bg-middle/100
            hover:shadow-md focus:shadow-md
            hover:tracking-[0.25em] hover:!font-normal transition-widen duration-200
            focus:!font-normal focus:tracking-[0.25em]`}
	>
		{
			isLoading ? (
				<>
					<svg
						class="animate-spin -ml-1 mr-3 h-5 w-5"
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
					>
						<title>Loading</title>
						<circle
							class="opacity-25"
							cx="12"
							cy="12"
							r="10"
							stroke="currentColor"
							stroke-width="4"
						/>
						<path
							class="opacity-75"
							fill="currentColor"
							d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
						/>
					</svg>{' '}
					Please wait
				</>
			) : (
				<slot />
			)
		}
	</Button>
</div>
